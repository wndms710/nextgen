EXTRA_ARGS=$@

cmake \
  -D DART_TESTING_TIMEOUT:STRING=100 \
  -D BUILD_SHARED_LIBS=ON \
  -D Trilinos_ENABLE_CXX11=OFF \
  -D Trilinos_ENABLE_Tpetra:BOOL=ON \
  -D Trilinos_ENABLE_Teuchos:BOOL=ON \
  -D Trilinos_ENABLE_Tutorial:BOOL=OFF \
  -D Trilinos_ENABLE_Belos:BOOL=ON \
  -D Trilinos_ENABLE_ML:BOOL=ON \
  -D Trilinos_ENABLE_Ifpack2:BOOL=ON\
  -D Trilinos_ENABLE_Kokkos:BOOL=ON\
  -D Trilinos_ENABLE_Zoltan2:BOOL=ON\
  -D Trilinos_ENABLE_Amesos2:BOOL=ON\
  -D Trilinos_ENABLE_MueLu:BOOL=ON \
  -D TPL_ENABLE_MPI:BOOL=ON \
  -D Trilinos_ENABLE_TESTS:BOOL=OFF \
  -D Trilinos_ENABLE_EXAMPLES:BOOL=OFF \
  -D MueLu_ENABLE_TESTS:STRING=OFF \
  -D MueLu_ENABLE_EXAMPLES:STRING=OFF \
  -D Trilinos_ENABLE_Fortran:BOOL=OFF \
  -D CMAKE_CXX_COMPILER=mpicxx \
  -D CMAKE_C_COMPILER=mpicc \
  -D CMAKE_BUILD_TYPE=RELEASE \
  -D CMAKE_C_FLAGS_RELEASE_OVERRIDE="-O3 -funroll-loops" \
  -D CMAKE_CXX_FLAGS_RELEASE_OVERRIDE="-O3 -funroll-loops" \
  -D TPL_ENABLE_METIS:BOOL=OFF \
  -D TPL_ENABLE_ParMETIS:BOOL=OFF \
  -D BLAS_LIBRARY_DIRS=/lib64 \
  -D BLAS_LIBRARY_NAMES=libblas.so \
  -D LAPACK_LIBRARY_DIRS=/lib64 \
  -D LAPACK_LIBRARY_NAMES=liblapack.so \
  -D CMAKE_INSTALL_PREFIX:PATH=/home/user/software/libtrilinos/ \
 $EXTRA_ARGS \
  /home/user/software/Trilinos-trilinos-release-11-14-2



